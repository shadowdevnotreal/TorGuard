[Unit]
Description=TorGuard - Tor Connection Monitor
Documentation=https://github.com/shadowdevnotreal/TorGuard
After=network.target tor.service
Wants=tor.service

[Service]
Type=simple
ExecStart=/usr/bin/python3 /usr/local/bin/tor_guard.py --no-menu
Restart=on-failure
RestartSec=5s
User=root
StandardOutput=journal
StandardError=journal

# Security hardening
PrivateTmp=yes
NoNewPrivileges=yes
ProtectSystem=strict
ProtectHome=yes
ReadWritePaths=/var/tmp

[Install]
WantedBy=multi-user.target
